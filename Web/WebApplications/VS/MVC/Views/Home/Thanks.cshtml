@model MVC.Models.GuestResponse
@{
    Layout = null;
}

<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <title>Thanks :)</title>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="text-center">
        <h1>Thank you, @Model.Name!</h1>
        @if (Model.WillAttend.HasValue && Model.WillAttend.Value)
        {
            @: It's great that you're coming! Drinks are already in the fridge!
        }
        else 
        { 
            @: Sorry that you can't come, but thanks for response!
        }
        <br />
        Click <a asp-action="ListResponses">here</a> if you want to know other guests.
    </div>
</body>
